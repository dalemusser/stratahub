{{ define "resources_list" }}
  {{ template "layout" . }}
{{ end }}

{{ define "content" }}
<div class="flex items-center justify-between mb-2">
  <h1 class="text-2xl font-bold text-gray-800 dark:text-gray-200">ðŸ“š Resources</h1>
</div>

<form
  id="resources-search-form"
  action="/resources"
  method="GET"
  class="bg-white dark:bg-gray-800 rounded shadow p-3 mb-1 flex flex-col md:flex-row gap-2 md:items-center"
  hx-get="/resources"
  hx-target="#resources-table-wrap"
  hx-select="#resources-table-wrap"
  hx-swap="outerHTML"
  hx-push-url="true"
  hx-trigger="keyup changed delay:300ms from:#q"
>
  <input
    id="q"
    name="q"
    type="text"
    placeholder="Search by title or subjectâ€¦"
    value="{{ .Q }}"
    class="flex-1 px-4 py-2 border rounded-md text-sm focus:outline-none focus:ring-2 focus:ring-indigo-400"
  />

  <div class="ml-auto flex gap-2">
    <a
      href="/resources?q="
      hx-get="/resources"
      hx-vals='{"q":""}'
      hx-target="#resources-table-wrap"
      hx-select="#resources-table-wrap"
      hx-swap="outerHTML"
      hx-push-url="true"
      class="px-4 py-2 border rounded text-sm hover:bg-gray-50 dark:hover:bg-gray-700 mr-6"
    >
      Clear
    </a>

    {{ if .CanCreate }}
    <a href="/resources/new"
       class="px-4 py-2 bg-indigo-600 text-white rounded text-sm hover:bg-indigo-700">
      Add Resource
    </a>
    {{ end }}
  </div>
</form>

{{ template "resources_table" . }}
{{ end }}

{{ define "resources_table" }}
<!-- Top pager -->
<div id="resources-table-wrap">
<div class="flex items-center justify-between mb-1">
  <div class="text-gray-600 dark:text-gray-400 text-sm">
    {{ if .Total }}{{ .RangeStart }}â€“{{ .RangeEnd }} of {{ .Total }} shown{{ else }}0 of 0 shown{{ end }}
  </div>
  <div class="flex items-center gap-2">
    {{ if .HasPrev }}
      <a class="inline-flex items-center justify-center h-7 leading-none text-xs px-2 border rounded text-gray-700 dark:text-gray-200 hover:bg-gray-50 dark:hover:bg-gray-700 whitespace-nowrap"
         href="/resources?{{ if .Q }}q={{ .Q | urlquery }}&{{ end }}before={{ .PrevCursor }}&start={{ .PrevStart }}"
         hx-get="/resources?{{ if .Q }}q={{ .Q | urlquery }}&{{ end }}before={{ .PrevCursor }}&start={{ .PrevStart }}"
         hx-target="#resources-table-wrap" hx-swap="outerHTML" hx-push-url="true">Prev</a>
    {{ else }}
      <span class="inline-flex items-center justify-center h-7 leading-none text-xs px-2 border rounded text-gray-400 dark:text-gray-500 whitespace-nowrap">Prev</span>
    {{ end }}
    {{ if .HasNext }}
      <a class="inline-flex items-center justify-center h-7 leading-none text-xs px-2 border rounded text-gray-700 dark:text-gray-200 hover:bg-gray-50 dark:hover:bg-gray-700 whitespace-nowrap"
         href="/resources?{{ if .Q }}q={{ .Q | urlquery }}&{{ end }}after={{ .NextCursor }}&start={{ .NextStart }}"
         hx-get="/resources?{{ if .Q }}q={{ .Q | urlquery }}&{{ end }}after={{ .NextCursor }}&start={{ .NextStart }}"
         hx-target="#resources-table-wrap" hx-swap="outerHTML" hx-push-url="true">Next</a>
    {{ else }}
      <span class="inline-flex items-center justify-center h-7 leading-none text-xs px-2 border rounded text-gray-400 dark:text-gray-500 whitespace-nowrap">Next</span>
    {{ end }}
  </div>
</div>

<div class="bg-white dark:bg-gray-800 rounded shadow overflow-auto" style="max-height: calc(100vh - 13.5rem); min-height: 10rem;">
  <table class="min-w-full table-fixed text-sm text-left text-gray-700 dark:text-gray-300">
    <thead class="bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-400 uppercase text-xs sticky top-0 z-10">
      <tr>
        <th class="px-2 py-2 w-1/4">Title</th>
        <th class="px-2 py-2 w-[10%]">Subject</th>
        <th class="px-2 py-2">Type</th>
        <th class="px-2 py-2">Status</th>
        <th class="px-2 py-2">Show</th>
        <th class="px-2 py-2">Description</th>
        <th class="px-2 py-2 text-right">Actions</th>
      </tr>
    </thead>
    <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
      {{ range .Items }}
      <tr>
        <td class="px-2 py-2 align-middle">{{ .Title }}</td>
        <td class="px-2 py-2 align-middle">{{ .Subject }}</td>
        <td class="px-2 py-2 align-middle">{{ .Type }}</td>
        <td class="px-2 py-2 align-middle">{{ .Status }}</td>
        <td class="px-2 py-2 align-middle">{{ if .ShowInLibrary }}Yes{{ else }}No{{ end }}</td>
        <td class="px-2 py-2 align-middle break-all">{{ .Description }}</td>
        <td class="px-2 py-2 text-right">
          <form
            method="get"
            action="/resources/{{ .ID.Hex }}/manage_modal"
            hx-get="/resources/{{ .ID.Hex }}/manage_modal?return=/resources"
            hx-target="#modal-root"
            hx-swap="innerHTML"
            aria-label="Manage resource"
          >
            <button
              type="submit"
              class="bg-indigo-600 text-white px-2 py-1 rounded text-xs md:text-sm hover:bg-indigo-700"
              title="Manage {{ .Title }}"
            >
              Manage
            </button>
          </form>
        </td>
      </tr>
      {{ else }}
      <tr>
        <td colspan="7" class="px-2 py-6 text-center text-gray-500 dark:text-gray-400">
          No resources found.
        </td>
      </tr>
      {{ end }}
    </tbody>
  </table>
  <div class="w-full border-t border-gray-300 dark:border-gray-600"></div>
</div>
</div>
<div id="modal-root"></div>
{{ end }}

