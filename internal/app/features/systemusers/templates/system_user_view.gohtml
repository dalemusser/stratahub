{{ define "system_user_view" }}
  {{ template "layout" . }}
{{ end }}

{{ define "content" }}
<div class="flex items-center mb-2">
  <a href="{{ .BackURL }}"
     class="text-sm px-3 py-1 border rounded hover:bg-gray-50 dark:hover:bg-gray-700 mr-2"
     title="Go back">
    â† Back
  </a>
  <h1 class="text-2xl font-bold text-gray-900 dark:text-gray-100">ğŸ§‘â€ğŸ’» View System User</h1>
</div>

<div class="bg-white dark:bg-gray-800 rounded shadow p-4 max-w-3xl">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <div>
      <label class="block text-sm font-medium mb-1">Full Name</label>
      <input type="text" value="{{ .FullName }}" class="w-full px-3 py-2 border rounded bg-gray-100 dark:bg-gray-700" disabled>
    </div>
    <div>
      <label class="block text-sm font-medium mb-1">Email</label>
      <input type="text" value="{{ .Email }}" class="w-full px-3 py-2 border rounded bg-gray-100 dark:bg-gray-700" disabled>
    </div>

    <div>
      <label class="block text-sm font-medium mb-1">Role</label>
      <span class="inline-flex items-center px-2 py-1 rounded-full text-xs
                   {{ if eq .UserRole "admin" }}bg-purple-100 text-purple-800
                   {{ else if eq .UserRole "analyst" }}bg-blue-100 text-blue-800
                   {{ else }}bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300{{ end }}">
        {{ .UserRole }}
      </span>
    </div>

    <div>
      <label class="block text-sm font-medium mb-1">Auth Method</label>
      <span class="inline-flex items-center px-2 py-1 rounded-full text-xs bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-200">
        {{ if eq .Auth "internal" }}ğŸ” internal
        {{ else if eq .Auth "google" }}ğŸŸ¢ google
        {{ else if eq .Auth "classlink" }}ğŸ”— classlink
        {{ else if eq .Auth "clever" }}ğŸ§© clever
        {{ else if eq .Auth "microsoft" }}ğŸªŸ microsoft
        {{ else }}{{ .Auth }}{{ end }}
      </span>
    </div>

    <div>
      <label class="block text-sm font-medium mb-1">Status</label>
      <span class="inline-flex items-center px-2 py-1 rounded-full text-xs
                   {{ if eq .Status "active" }}bg-green-100 text-green-800
                   {{ else if eq .Status "disabled" }}bg-gray-200 dark:bg-gray-600 text-gray-700 dark:text-gray-300
                   {{ else }}bg-yellow-100 text-yellow-800{{ end }}">
        {{ .Status }}
      </span>
    </div>
  </div>
</div>

<div class="max-w-3xl mt-4">
    <a href="/system-users/{{ .ID }}/edit?return={{ .BackURL | urlquery }}"
    class="mt-4 inline-block px-4 py-2 bg-indigo-600 text-white rounded hover:bg-indigo-700">
    Edit User
    </a>
</div>
{{ end }}