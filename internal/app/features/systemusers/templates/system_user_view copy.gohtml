{{ define "system_user_view" }}
  {{ template "layout" . }}
{{ end }}

{{ define "content" }}
<div class="flex items-center mb-2">
  <a href="{{ .BackURL }}"
     class="text-sm px-3 py-1 border rounded hover:bg-gray-50 mr-2"
     title="Go back">
    â† Back
  </a>
  <h1 class="text-2xl font-bold text-gray-900">ğŸ§‘â€ğŸ’» View System User</h1>
</div>

<div class="bg-white rounded shadow p-4 max-w-3xl">
  <div class="mb-4">
    <label class="block text-sm font-medium mb-1">Full Name</label>
    <input type="text" value="{{ .FullName }}" class="w-full px-3 py-2 border rounded bg-gray-100" disabled>
  </div>
  <div class="mb-4">
    <label class="block text-sm font-medium mb-1">Email</label>
    <input type="text" value="{{ .Email }}" class="w-full px-3 py-2 border rounded bg-gray-100" disabled>
  </div>
  <div class="mb-4">
    <label class="block text-sm font-medium mb-1">Role</label>
    <input type="text" value="{{ .URole }}" class="w-full px-3 py-2 border rounded bg-gray-100 capitalize" disabled>
  </div>
  <div class="mb-4">
    <label class="block text-sm font-medium mb-1">Auth Method</label>
    <input type="text" value="{{ .Auth }}" class="w-full px-3 py-2 border rounded bg-gray-100" disabled>
  </div>
  <div class="mb-2">
    <label class="block text-sm font-medium mb-1">Status</label>
    <input type="text" value="{{ .Status }}" class="w-full px-3 py-2 border rounded bg-gray-100" disabled>
  </div>
</div>

<div class="max-w-3xl mt-4">
    <a href="/system-users/{{ .ID }}/edit?return={{ .BackURL | urlquery }}"
    class="mt-4 inline-block px-4 py-2 bg-indigo-600 text-white rounded hover:bg-indigo-700">
    Edit User
    </a>
</div>
{{ end }}